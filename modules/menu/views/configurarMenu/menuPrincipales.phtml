    ?>
    <li id="liMenPri_<?php echo $value['id_menuprincipal']; ?>" data-orden="<?php echo $value['id_menuprincipal']; ?>" data-url="<?php echo $url ?>" data-alias="<?php echo $value['alias']; ?>">
            <a onclick="popoverResize();" href="javascript:;" rel="popover" data-placement="top" data-original-title="<?php echo $value['menuprincipal']; ?>" data-content="<div><b>Alias:</b> <?php echo $value['alias']; ?></div><div><b>URL:</b> <br><?php echo $url ?></div><div><b>Orden:</b> <?php echo $value['orden']; ?></div>" data-html="true">
                <span style="<?php echo $inactivo; ?>"><?php echo $value['menuprincipal']; ?></span>
                <div class="pull-right btn-group" style="margin-top: -4px;">
                    <?php if ($editar['permiso']): ?>
                    <button class="<?php echo $editar['theme']; ?>" title="<?php echo $editar['accion']; ?>" onclick="configurarMenu.getEditarMenuPrincipal('<?php echo AesCtr::en($value['id_menuprincipal']); ?>');">
                        <i class="<?php echo $editar['icono']; ?>"></i>
                    </button>
                    <?php endif; ?>
