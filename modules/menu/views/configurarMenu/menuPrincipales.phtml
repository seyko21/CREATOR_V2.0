                        <button class="<?php echo $eliminar['theme']; ?>" title="<?php echo $eliminar['accion']; ?>" onclick="configurarMenu.postDeleteMenuPrincipal('<?php echo AesCtr::en($value['id_menuprincipal']); ?>');">
